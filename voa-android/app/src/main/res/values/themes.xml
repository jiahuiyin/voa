<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.VOA" parent="Theme.MaterialComponents.DayNight.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#DDDDDD</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#3365E5</item>
        <item name="colorSecondaryVariant">#3365E5</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.VOA.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.VOA.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
<!--    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar"/>-->
    <style name="Theme.VOA.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>